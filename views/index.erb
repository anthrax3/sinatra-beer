<!DOCTYPE HTML>
<html>
  <head>
    <title>Ruby Beer Recommender</title>
    <script src="js/jquery-1.10.2.min.js"></script>
  </head>
  <body>
    <form id="rec">
      <select id="beer">
        <option value="Coors Light">Coors Light</option>
        <option value="Sierra Nevada Pale Ale">Sierra Nevada Pale Ale</option>
        <option value="Fat Tire Amber Ale">Fat Tire Amber Ale</option>
        <option value="Blue Moon Belgian White">Blue Moon Belgian White</option>
        <option value="60 Minute IPA">60 Minute IPA</option>
      </select></br>
      
      <label>Overall:</label><input name="weight1" type="range" min="0" max="10" step="1" value="5"></br>
      <label>Aroma: </label><input name="weight2" type="range" min="0" max="10" step="1" value="5"></br>
      <label>Taste: </label><input name="weight3" type="range" min="0" max="10" step="1" value="5"></br>
      <label>Color: </label><input name="weight4" type="range" min="0" max="10" step="1" value="5"></br>
      <input type="submit" value="Go!">
    </form>
    <pre id="result" style="background-color: #E8E8E8; width: 700px;">
    </pre>
  </body>
  <script type="text/javascript">
    $("#rec").submit(function(e) {
        var beer = $("#beer").val();
        $.get("/" + beer, function(d) {
          $("#result").text(JSON.stringify(d, null, 2));
        });
        return false;
    });
  </script>
</html>
